<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado con logo, nombre de la app y botón de menú -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Botón de menú -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_menu" />

            <!-- Nombre de la app -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Slogan o mensaje de bienvenida -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/bienvenida"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="italic" />

        <!-- Sección de publicaciones/noticias con imágenes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Imagen 1 -->
            <ImageView
                android:id="@+id/newsImage1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/imagen" /> <!-- Imagen por defecto -->

            <!-- Imagen 2 -->
            <ImageView
                android:id="@+id/newsImage2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/imagen2" /> <!-- Imagen por defecto -->

            <!-- Imagen 3 -->
            <ImageView
                android:id="@+id/newsImage3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/imagen3" /> <!-- Imagen por defecto -->

            <!-- Imagen 4 -->
            <ImageView
                android:id="@+id/newsImage4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/imagen4" /> <!-- Imagen por defecto -->

        </LinearLayout>

        <!-- Contenedor de fragmentos -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</ScrollView>
